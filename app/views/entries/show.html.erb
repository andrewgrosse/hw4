<h2><%= @entry.title %></h2>
<p><strong>Date:</strong> <%= @entry.occurred_on.strftime("%Y-%m-%d") %></p>
<p><strong>Description:</strong> <%= @entry.description %></p>

<% if @entry.image_url.present? %>
  <img src="<%= @entry.image_url %>" class="img-fluid" alt="Entry Image">
<% end %>

<div class="mt-3">
  <%= link_to "Edit", edit_place_entry_path(@place, @entry), class: "btn btn-warning" %>
  <%= link_to "Delete", place_entry_path(@place, @entry), method: :delete, 
       data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  <%= link_to "Back to Entries", place_path(@place), class: "btn btn-secondary" %>
</div>
