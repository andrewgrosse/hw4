<h2>Add a New Entry</h2>

<%= form_with(model: [@place, @entry], local: true, html: { multipart: true }) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :occurred_on, class: "form-label" %>
    <%= form.date_field :occurred_on, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :uploaded_image, "Upload Image", class: "form-label" %>
    <%= form.file_field :uploaded_image, class: "form-control" %>
  </div>

  <%= form.submit "Save Entry", class: "btn btn-primary" %>
<% end %>

<p>
  <%= link_to "Cancel", place_path(@place), class: "btn btn-secondary mt-3" %>
</p>
