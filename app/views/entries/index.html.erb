<h2 class="mb-4">My Entries</h2>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= entry.title %></h5>
          <p class="card-text"><%= entry.description %></p>
          <p class="text-muted"><%= entry.occurred_on.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Add New Entry", new_entry_path, class: "btn btn-success mt-3" %>
